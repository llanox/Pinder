<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.edu.eafit.mobile.android" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="co.edu.eafit.mobile.android.activities.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="co.edu.eafit.mobile.android.activities.ProfileView"
            android:label="@string/title_activity_profile_view" >
        </activity>
        <activity
            android:name="co.edu.eafit.mobile.android.activities.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="co.edu.eafit.mobile.android.activities.ProfileList"
            android:label="@string/title_activity_profile_list" >
        </activity>
        <activity
            android:name="co.edu.eafit.mobile.android.WeatherActivity"
            android:label="@string/title_activity_weather" >
        </activity>
    </application>

</manifest>
